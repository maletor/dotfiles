general {
        colors = true
        color_good = "#a1b56c"
        color_bad = "#ab4642"
        interval = 5
}

order += "ipv6"
order += "disk /home/maletor"
order += "load"
order += "tztime date"
order += "tztime time"

disk "/home/maletor" {
        format = "%avail"
}

load {
        format = "%1min %5min %15min"
}

tztime date {
        format = "%Y-%m-%d"
}

tztime time {
        format = "%H:%M"
}
